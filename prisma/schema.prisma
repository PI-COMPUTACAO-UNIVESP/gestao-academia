datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(cuid())

  // Login Information
  name     String
  email    String @unique
  password String
  profile  String

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Member {
  id String @id @default(cuid())

  // Personal Information
  firstName String
  lastName  String
  birthDate DateTime @db.Date

  // Contact Information
  phone String
  email String

  // Relations
  attendances Attendance[]

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("members")
}

model Class {
  id String @id @default(cuid())

  // Class Information
  type String
  date DateTime

  // Relations
  attendances Attendance[]

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("classes")
}

model Attendance {
  classId  String
  memberId String

  // Relations
  class  Class  @relation(fields: [classId], references: [id], onDelete: Cascade)
  member Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  // Metadata
  createdAt DateTime @default(now())

  @@id([classId, memberId])
  @@map("attendances")
}
