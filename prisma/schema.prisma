datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id String @id @default(cuid())

  // Personal Information
  firstName String
  lastName  String
  birthDate DateTime @db.Date

  // Contact Information
  phone String
  email String

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("members")
}
